datasource db {
    provider = "cockroachdb"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Transaction {
    id         String          @id @default(uuid())
    user_id    String
    instrument String?
    type       TransactionType
    amount     Float
    price      Float
    created_at DateTime        @default(now())
}

model Balance {
    user_id  String
    currency String
    amount   Float

    @@unique([user_id, currency])
}

model Asset {
    user_id  String
    instrument String
    quantity   Float

    @@unique([user_id, instrument])
}

model Bookmark {
    user_id       String
    currency_pair String

    @@unique([user_id, currency_pair])
}

enum TransactionType {
    buy
    sell
}
