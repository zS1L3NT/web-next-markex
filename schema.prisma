datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Transaction {
    id            String   @id @default(uuid())
    user_id       String
    from_currency String
    to_currency   String
    amount        Float
    price         Float
    created_at     DateTime @default(now())
}

model Balance {
    user_id  String
    currency String
    amount   Float

    @@unique([user_id, currency])
}

model Bookmark {
    user_id       String
    currency_pair String

    @@unique([user_id, currency_pair])
}
